@using PagedList.Mvc
@model PagedList.IPagedList<emarketing_project.Models.tbl_category>
@{
    ViewBag.Title = "ViewCategory";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Category</title>
    <link href="~/Content/pagination.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
   
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid;">
               
                <div>
                    <img src="~/Content/img/BAN.png" style="height: 100px;width:100%" />
                </div>
            </div>
            <div class="row" style="margin-bottom:40px">
                <div class="col-lg-2 col-md-2">
                   
                    <img src="~/Content/img/ad1.png" class="img img-responsive" style="width:100%;height:100%" />
                </div>

                <div class="col-lg-8 col-md-8">
                    <div class="row" style="margin-bottom:40px">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                                    <img src="@Url.Content(item.cat_image)" style="height:100%;width:100%;border-radius:50px 50px 50px 50px" />
                                    <h4 style="color:brown;font-family:'Arial Rounded MT';text-align:center">@Html.ActionLink(@item.cat_name, "Ads", new { id = item.cat_id })</h4>

                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="col-lg-2 col-md-2">
                    <img src="~/Content/img/ad2.png" class="img img-responsive" style="width:100%;height:100%" />
                </div>
            </div>

            <div id="container" style="margin-left:20px">
                <p></p>
                <p></p>
                <div class="pagination" style="margin-left:400px">
                    Page @(Model.PageCount<Model.PageNumber?0: Model.PageNumber)
                    of   @Model.PageCount @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
   
</body>
</html>



