    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a @Url.Action("Logo", "Index")>
                <img src="https://imgs.search.brave.com/YY2WuoB5q8flVs_Bwj5m86f3_xE_iiKVfzevk8uAMkI/rs:fit:500:0:0/g:ce/aHR0cHM6Ly9jbGlw/YXJ0LWxpYnJhcnku/Y29tL2ltYWdlX2dh/bGxlcnkyL0NhcnQt/UE5HLVBpYy5wbmc" style="height:50px;width:50px" alt="" />
