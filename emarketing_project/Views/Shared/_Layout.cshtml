            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About Us", "About", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>
                        @if (Session["u_id"] != null)
                        {
                            @Html.ActionLink("Post An Ad", "CreateAd", "User", new { area = "" }, new { @class = "nav-link" })
                        }
                    </li>
                    

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (Session["u_id"] == null)
